<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.psychegame.mapper.UserMapper">
    
    <!-- 结果映射 -->
    <resultMap id="UserResultMap" type="com.psychegame.entity.User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="email" column="email"/>
        <result property="nickname" column="nickname"/>
        <result property="avatar" column="avatar"/>
        <result property="role" column="role"/>
        <result property="status" column="status"/>
        <result property="lastLoginTime" column="last_login_time"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>
    
    <!-- 根据ID查询用户 -->
    <select id="selectById" parameterType="java.lang.Long" resultMap="UserResultMap">
        SELECT * FROM user WHERE id = #{id}
    </select>
    
    <!-- 根据用户名查询用户 -->
    <select id="selectByUsername" parameterType="java.lang.String" resultMap="UserResultMap">
        SELECT * FROM user WHERE username = #{username}
    </select>
    
    <!-- 根据邮箱查询用户 -->
    <select id="selectByEmail" parameterType="java.lang.String" resultMap="UserResultMap">
        SELECT * FROM user WHERE email = #{email}
    </select>
    
    <!-- 查询所有用户 -->
    <select id="selectAll" resultMap="UserResultMap">
        SELECT * FROM user ORDER BY created_at DESC
    </select>
    
    <!-- 插入用户 -->
    <insert id="insert" parameterType="com.psychegame.entity.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (
            username, password, email, nickname, avatar, 
            role, status, created_at, updated_at
        ) VALUES (
            #{username}, #{password}, #{email}, #{nickname}, #{avatar}, 
            #{role}, #{status}, #{createdAt}, #{updatedAt}
        )
    </insert>
    
    <!-- 更新用户 -->
    <update id="update" parameterType="com.psychegame.entity.User">
        UPDATE user SET
            username = #{username},
            password = #{password},
            email = #{email},
            nickname = #{nickname},
            avatar = #{avatar},
            role = #{role},
            status = #{status},
            updated_at = #{updatedAt}
        WHERE id = #{id}
    </update>
    
    <!-- 删除用户 -->
    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM user WHERE id = #{id}
    </delete>
    
    <!-- 更新用户最后登录时间 -->
    <update id="updateLastLoginTime" parameterType="java.lang.Long">
        UPDATE user SET last_login_time = CURRENT_TIMESTAMP WHERE id = #{id}
    </update>
    
</mapper>
